<%layout("/layouts/boilerplate")%>
 <div class="row">
            <div class="col-6 offset-3 mt-2 mb-3">
                   <h3 class="col-8 ">SignUp on Traveller's Hub</h3>
                      <form action="/signup" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                             <label class="form-label" for="username">Username</label>
                                           <input name="username" 
                                           placeholder="Enter a username" 
                                           id="username"
                                           type="text" 
                                           class="form-control" required/>
                                     
                                   <div class="valid-feedback">looks-good </div>
                                   <div class="invalid-feedback">You have to enter a unique username </div>
                              </div>
                               <div class="mb-3">
                             <label class="form-label" for="email">Email</label>
                                           <input name="email" 
                                           placeholder="Enter email" 
                                           id="email"
                                           type="email" 
                                           class="form-control" required/>
                                     
                                   <div class="valid-feedback">looks-good </div>
                                   <div class="invalid-feedback">You have to enter email </div>
                              </div>
                               <div class="mb-3">
                             <label class="form-label" for="password">password</label>
                                           <input name="password" 
                                           placeholder="Enter password" 
                                           id="password"
                                           type="password" 
                                           class="form-control" required/>
                                     
                                   <div class="valid-feedback">looks-good </div>
                                   <div class="invalid-feedback">enter password </div>
                              </div>   
                              
                              <button class="btn btn-success">SignUp</button>
                      </form>
                         <p>Already a user? <a href="/login">LogIn here</a></p>
            </div>
        </div>